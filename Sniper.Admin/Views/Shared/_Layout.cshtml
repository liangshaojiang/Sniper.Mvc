<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @(WorkContext.Store?.Name)</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/ace.min.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/ace-fonts.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/ace-skins.min.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/ace-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/jquery.gritter.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/ace-part2.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/jquery-ui.custom.css" rel="stylesheet" />
    <link href="~/Content/ace/assets/css/bootstrap-editable.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body class="no-skin">
    <div id="navbar" class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-container" id="navbar-container">
            <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler">
                <span class="sr-only">Toggle sidebar</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-header pull-left">
                <a href="@Url.RouteUrl("homeIndex")" class="navbar-brand">
                    <small>
                        <i class="@(WorkContext.Store?.IconClass)"></i>
                        @(WorkContext.Store?.Name)
                    </small>
                </a>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="main-container" id="main-container">
        @Html.Partial("_NavbarPartial")
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/ace")
    @Scripts.Render("~/bundles/ace/elements")
    @Scripts.Render("~/bundles/ace/gritter")
    @Scripts.Render("~/bundles/ace/extra")
    @Scripts.Render("~/bundles/ace/bootbox")
    @Scripts.Render("~/bundles/ace/custom")
    @Scripts.Render("~/bundles/ace/editable")
    @Scripts.Render("~/bundles/ace/ace-editable")
    @Scripts.Render("~/bundles/ace/wysiwyg")
    @Scripts.Render("~/bundles/modal")
    @Scripts.Render("~/bundles/form")
    @Scripts.Render("~/bundles/md5")
    @Scripts.Render("~/bundles/ajaxSetup")
    @Scripts.Render("~/bundles/function")
    @Scripts.Render("~/bundles/js/select2")
    @Scripts.Render("~/bundles/js/select2/zhCn")
    @RenderSection("scripts", required: false)
</body>
</html>
