@using Sniper.Mapping.SysRole
@model SysRoleMapping
@{
    ViewBag.Title = "编辑角色";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.RouteUrl("homeIndex")">首页</a>
        </li>
        <li><a href="@Url.RouteUrl("roleIndex")">角色列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ul>
</div>

<div class="page-content">
    <h1>@ViewBag.Title</h1>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginRouteForm("editRole", new { }, FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.Id)
                @Html.AntiForgeryToken() 
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right">角色名称 @RequiredSpan()</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-10 col-sm-5", placeholder = "角色名称" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div> 
                <div class="col-md-offset-2 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        提交
                    </button>
                </div>
            }
        </div>
    </div>
</div>
